$picture-padding: 0.25em;

.gallery {
    @include fixed-container();
    padding: $content-padding;
    font-size: 2em;
    line-height: 1.25em;

    h5 {
        text-transform: uppercase;
        margin-bottom: 0.5em;
    }
    .gallery-collection{
        list-style: none;
        margin: 0;
        display: flex;
        flex-flow: wrap;
    }
    .gallery-collection li {
        margin: 0.25em 0;
        flex: 0 1 auto;
        box-sizing: border-box;
        padding: 0.125em 0.25em;
    }
    .picture-container {
        overflow: hidden;
        position: relative;
	    padding-bottom: 66%;
            z-index: 1;
        
        img {
            position: absolute;
            top: 0; left: 0;
            display: block;
            width: 100%;
        }
    }
    figcaption {
        margin-top: 0.5em;
        .caption-1 {
            text-transform: uppercase;
            font-weight: bold;
            font-size: 0.75em;
        }
        .caption-2 {
            font-family: $serif;
        }
    }

    &.staff{
        .picture-container {
            box-shadow: 1px 1px 6px $black;
        }
    }
    &.photo{
        .picture-container {
            display: block;
        }
        .gallery-item{
            border: 1px solid $black;
            padding: $picture-padding;
        }
    }

    @include media-xl(){
        &.gallery-3 {
            .gallery-collection li {
                width: 33%;
            }
        }
        &.gallery-5 {
            .gallery-collection li {
                width: 20%;
            }
        }
    }
    @include media-md(){
        &.gallery-3 {
            .gallery-collection li {
                width: 50%;
            }
        }
        &.gallery-5 {
            .gallery-collection li {
                width: 25%;
            }
        }
    }
    @include media-sm(){
        &.gallery-5 {
            .gallery-collection li {
                width: 33%;
            }
        }
    }
    @include media-xs(){
        &.gallery-3 {
            .gallery-collection li {
                width: 100%;
            }
        }
        &.gallery-5 {
            .gallery-collection li {
                width: 50%;
            }
        }
    }
}

.full-overlay .gallery-full-size {
    position: absolute;
    top: 5em; right: 5em; bottom: 5em; left: 5em;
    overflow: hidden;
    opacity: 0;
    transition: opacity 0.3s ease-out;

    img {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 0; left: 0;
        margin: 0 auto;
        max-width: 100%;
    }

    &.active {
        opacity: 1;
    }

    a.close-button{
        @include buttonify();

        @include btn-variant($white, $transparent, $yellow, $transparent);

        position: absolute;
        right: 0;
        top: 0;
        font-size: 3em;
        padding: 0;
    }
    a.close-button::before{
        content: "\2716";
    }
}