@import 'variables';
@import 'mixins';

:root {
	font-size: $font-size-rem-base;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0,0,0,0);
  white-space: nowrap;
  clip-path: inset(50%);
  border: 0;
}

.sr-only-focusable {
  &:active,
  &:focus {
    position: static;
    width: auto;
    height: auto;
    overflow: visible;
    clip: auto;
    white-space: normal;
    clip-path: none;
  }
}

.sr-navigation {
	position: absolute;
}

a {
	@include linkColor();
	@include linkUnderline();
}

.text-left{
	text-align: left;
}
.text-center{
	text-align: center;
}
.text-right{
	text-align: right;
}
.text-justify{
	text-align: justify;
}

.font-weight-bold{
	font-weight: 600;
}
.font-weight-normal {
	font-weight: normal;
}
.font-size-xs{
	font-size: 0.5rem;
}
.font-size-sm{
	font-size: 0.625rem;
}
.font-size-md{
	font-size: 0.75rem;
}
.font-size-lg{
	font-size: 0.875rem;
}


ul.remove-list-style{
	list-style: none;
}
ul.inline-list{
	list-style: none;
	li {
		margin: 0;
		display: inline-block;
	}
}


body {
	font-family: "Lucida Grande",Arial,Helvetica,sans-serif;
	font-size: 0.75rem;
	line-height: 1;
	min-height: 100vh;
}

header {

	.top-bar-wrapper{
		background-color:$green;
		background-image: url(https://static.ndsu.nodak.edu/templates/images/bg_header.jpg);
		background-repeat: no-repeat;
		background-size: auto 100%;
		background-position: top left;
		margin-bottom: 2em;
	}

	.top-bar {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
	}

	.top-bar a.nav-link {
		@include linkColor($yellow, $white);
	}

	h2.page-title{
		font-size: 2.5em;
		font-weight: 100;
		margin-bottom: 0.25em;
	}
}
main {
	margin-bottom: 3rem;
}
footer {
	.footer-nav {
		background-image: url(https://static.ndsu.nodak.edu/templates/images/bg_footernav.png);
		background-repeat: repeat-x;
		background-size: auto 100%;
	}
	.footer-nav .navbar {
		background: none;
	}

	@include linkColor($white, $yellow, '.footer-nav a.nav-link');
	@include linkColor($black, $black, '.footer-nav .secondary-menu a.nav-link');

	.quick-links {
		padding: 2em 0;
	}
	.quick-links ul {
		list-style: none;
		line-height: 1.5em;
		margin: 0 1em;
	}
	.quick-links ul li{
		text-indent: -1em;
		margin-left: 1em;
	}
}

.contact {
	address {
		margin: 1em 0;
	}
	address h3 {
		margin-bottom: 0.5em;
		color: $yellow;
	}

	address .address-part{
		display: inline-block;
		vertical-align: top;
	}
}

.alpha-links {
    li.index a {
		color: $mineshaft;
		text-transform: uppercase;
    }
}

.social-media {
	a{
		height: 25px;
		width: 25px;
		background: url(https://static.ndsu.nodak.edu/templates/images/icon_social_media.png) no-repeat top left;
		display: inline-block;
	}
	a:hover{
		opacity: 0.6;
	}

	.icon-twitter {
		background-position: -25px 0px;
	}
	.icon-instagram {
		background-position: -50px 0px;
	}
	.icon-youtube {
		background-position: -75px 0px;
	}
	.icon-rss {
		background-position: -100px 0px;
	}
	.icon-googlemap {
		background-position: -125px 0px;
	}
}