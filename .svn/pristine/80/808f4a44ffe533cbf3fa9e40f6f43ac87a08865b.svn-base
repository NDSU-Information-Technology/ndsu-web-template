@import 'variables';
@import 'mixins';

#indexModules {
	.index-module{
		border: 1px solid $capecod;
	}
	ul li {
		line-height: 1.5em;
	}

	h2 {
		@include gotham-font;

		padding-bottom: 10px;
		text-transform: uppercase;
		font-weight: 600;
		font-size: 0.75rem;
		color: $yellow;

		a{
			@include linkColor($yellow, $white);
		}
	}

	h6 {
		margin-top: 0.5em;
		font-weight: normal;
	}
}

#homepageCarousel {
	.slide img{
		width: 0;
	}

	.slide.current img,
	.slide.in-transition img{
		width: 100%;
	}
}
