@mixin createTheme($name, $backgroundColor, $fontColor, $linkColor, $linkActiveColor){
    .theme-#{$name} {
        background-color: $backgroundColor;
        color: $fontColor;

        a {
            @include linkColor($linkColor, $linkActiveColor);
        }
    }

    @content;
}

@mixin extendTheme($name, $selector){
    .theme-#{$name} #{$selector}{
        @content;
    }
}