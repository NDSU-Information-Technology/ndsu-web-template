@import 'variables';
@import 'mixins';

:root {
	font-size: $font-size-rem-base;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0,0,0,0);
  white-space: nowrap;
  clip-path: inset(50%);
  border: 0;
}

.sr-only-focusable {
  &:active,
  &:focus {
    position: static;
    width: auto;
    height: auto;
    overflow: visible;
    clip: auto;
    white-space: normal;
    clip-path: none;
  }
}

.sr-navigation {
	position: absolute;
}

a {
	@include linkColor();
	@include linkUnderline();
}

.text-left{
	text-align: left;
}
.text-center{
	text-align: center;
}
.text-right{
	text-align: right;
}
.text-justify{
	text-align: justify;
}

.font-weight-bold{
	font-weight: 600;
}
.font-weight-normal {
	font-weight: normal;
}
.font-size-xs{
	font-size: 0.5rem;
}
.font-size-sm{
	font-size: 0.625rem;
}
.font-size-md{
	font-size: 0.75rem;
}
.font-size-lg{
	font-size: 0.875rem;
}


ul.remove-list-style{
	list-style: none;
}
ul.inline-list{
	list-style: none;
	li {
		margin: 0;
		display: inline-block;
	}
}

.container {
	margin: 0 auto;
	padding: 0 2rem;
	max-width: 1220px;

	@include lScreen() {
		max-width: 1050px;
	}
	@include mScreen() {
		max-width: 880px;
	}
}

.section {
	padding-top: 2em;
	padding-bottom: 2em;
}

.flex-container {
	display: flex;
	justify-content: space-between;
	list-style: none;

	&.multiline {
		flex-wrap: wrap;
	}

	&.row{
		flex-direction: row;
	}
	&.column{
		flex-direction: column;
	}
	&.flex-center{
		justify-content: center;
	}

	.flex-item{
		flex: 0 1 auto;
	}
	
	@each $size in (1, 2, 3, 4, 5, 6, 7, 8, 9) {
		.flex-item-size-#{$size} { flex-grow: $size }
	}

    @each $size, $length in $spacers {
        .flex-item-m-#{$size}  { margin:        $length !important; }
        .flex-item-mt-#{$size} { margin-top:    $length !important; }
        .flex-item-mr-#{$size} { margin-right:  $length !important; }
        .flex-item-mb-#{$size} { margin-bottom: $length !important; }
        .flex-item-ml-#{$size} { margin-left:   $length !important; }
        .flex-item-mx-#{$size} {
            margin-right: $length !important;
            margin-left:  $length !important;
        }
        .flex-item-my-#{$size} {
            margin-top:    $length !important;
            margin-bottom: $length !important;
        }
    }
}


body {
	font-family: "Lucida Grande",Arial,Helvetica,sans-serif;
	font-size: 0.75rem;
	line-height: 1;
	min-height: 100vh;
}

header {

	.top-bar-wrapper{
		background-color: #002119;
		background-image: url(https://static.ndsu.nodak.edu/templates/images/bg_header.jpg);
		background-repeat: no-repeat;
		background-position: top left;
	}

	.top-bar {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
	}

	.top-bar .navbar {
		background: none;
	}

	@include linkColor($yellow, $white, '.top-bar a.nav-link');

	.bottom-bar {
		background-color: $white;
		border-bottom: 1px solid $stormdust;
	}
}

footer {
	.footer-nav {
		background-image: url(https://static.ndsu.nodak.edu/templates/images/bg_footernav.png);
		background-repeat: repeat-x;
		background-size: auto 100%;
	}
	.footer-nav .navbar {
		background: none;
	}

	@include linkColor($white, $yellow, '.footer-nav a.nav-link');
	@include linkColor($black, $black, '.footer-nav .secondary-menu a.nav-link');

	.quick-links {
		padding: 2em 0;
	}
	.quick-links ul {
		list-style: none;
		line-height: 1.5em;
		margin: 0 1em;
	}
	.quick-links ul li{
		text-indent: -1em;
		margin-left: 1em;
	}
}

.contact {
	address {
		margin: 1em 0;
	}
	address h3 {
		margin-bottom: 1em;
		color: $yellow;
	}
}

.alpha-links {
    li.index a {
		color: $mineshaft;
		text-transform: uppercase;
    }
}

.social-media {
	a{
		height: 25px;
		width: 25px;
		background: url(https://static.ndsu.nodak.edu/templates/images/icon_social_media.png) no-repeat top left;
		display: inline-block;
	}
	a:hover{
		opacity: 0.6;
	}

	.icon-twitter {
		background-position: -25px 0px;
	}
	.icon-instagram {
		background-position: -50px 0px;
	}
	.icon-youtube {
		background-position: -75px 0px;
	}
	.icon-rss {
		background-position: -100px 0px;
	}
	.icon-googlemap {
		background-position: -125px 0px;
	}
}