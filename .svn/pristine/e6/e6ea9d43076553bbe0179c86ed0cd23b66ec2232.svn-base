@import 'mixins';
.btn {
    display: inline-block;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    user-select: none;
    transition: all 0.3s ease-out;
    text-decoration: none;
    padding: 0.5em 2em;
    font-weight: 600;
    line-height: 1em;
    height: 1em;
}
a.btn {
    text-decoration: none;
}

.btn-yellow {
    @include btn-variant($logcabin, $yellow, $mineshaft, lighten($yellow,10%));
}
.btn-darkgray {
    @include btn-variant($white, $mineshaft, $mineshaft, $silverchalice);
}

.btn-tiny {
    padding: 0.25em 0.5em;
}