.bigquote {
    padding: 8em 4em;
    .quote {
        text-align: center;
        margin-bottom: 0.5em;
    }
    .quote::before{
        content: "\201C"
    }
    .quote::after{
        content: "\201D"
    }

    .byline {
        text-align: right;
        font-size: 2em;
    }
    .byline::before {
        content: "\2014\0020";
    }

    &.green-quote{
        background-color: $green;
        background: $gradient-green;

        .quote {
            text-transform: uppercase;
            color: $yellow;
            font-size: 6em;
            line-height: 1.5em;
        }
        .byline {
            color: $white;
        }
    }

    &.yellow-quote {
        background-color: $yellow;
        font-family: $serif;

        .quote {
            font-size: 9em;
        }
        .byline {
            font-style: italic;
        }
    }

    &.smaller {
        &.green-quote .quote {
            font-size: 4em;
        }
        &.yellow-quote .quote {
            font-size: 6em;
        }
    }
}