@import 'variables';
@import 'mixins';

.navbar {
	@extend %gotham-font;
	position: relative;
	display: flex;
	flex-wrap: wrap;
	flex-direction: row;
	list-style: none;
	align-items: center;
	justify-content: space-between;
	background-color: $white;
	text-transform: uppercase;	
	box-sizing: border-box;

	.nav-item{
		flex: 0 1 auto;
		display: table;
		margin: 0.5em 0.5em;
	}

    @include linkColor($black, $stormdust, 'a.nav-link'){
        display: table-cell;
        vertical-align: middle;
    };

	&.navbar-vertical {
		flex-direction: column;
		align-items: left;
	}

	&.navbar-left {
		justify-content: flex-start;
		.nav-item {
			margin-left: 0;
			margin-right: 1em;
		}
	}
	&.navbar-center {
		justify-content: center;
	}
	&.navbar-right {
		justify-content: flex-end;
		.nav-item {
			margin-left: 1em;
			margin-right: 0;
		}
	}

	.nav-item.secondary {
		position: relative;
		.secondary-menu {
			text-transform: none;
			background-color: $white;
			background: rgba($white, 0.9);
		}
		.navbar {
			position: absolute;
			left: 0;
			visibility: hidden;
		}
	}
}

