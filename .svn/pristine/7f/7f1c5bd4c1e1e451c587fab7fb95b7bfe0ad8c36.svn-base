/* LINKS */
@mixin linkColor($primary: $green, $secondary: $mountainmist, $selector: '&'){
    #{$selector} {
        color: $primary;
        @content;
    }
    #{$selector}:hover, 
    #{$selector}:focus,
    #{$selector}[aria-expanded=true] {
        color: $secondary;
    }
}

@mixin linkUnderline($underline-mode: 0, $selector: '&') {
    @if ($underline-mode == 0) {
        #{$selector} {
            text-decoration: none;
        }
        #{$selector}:hover, 
        #{$selector}:focus,
        #{$selector}[aria-expanded=true] {
            text-decoration: underline;
        }
    } @else if ($underline-mode == 1) {
        #{$selector} {
            text-decoration: underline;
        }
        #{$selector}:hover,
        #{$selector}:focus,
        #{$selector}[aria-expanded=true] {
            text-decoration: none;
        }
    } @else if ($underline-mode == 2) {
        #{$selector} {
            text-decoration: underline;
        }
        #{$selector}:hover,
        #{$selector}:focus,
        #{$selector}[aria-expanded=true] {
            text-decoration: underline;
        }
    } @else {
        #{$selector} {
            text-decoration: none;
        }
    }
}