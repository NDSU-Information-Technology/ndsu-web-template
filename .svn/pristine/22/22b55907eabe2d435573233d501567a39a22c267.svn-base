@import 'variables';
@import 'mixins';

:root {
	font-size: $font-size-rem-base;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0,0,0,0);
  white-space: nowrap;
  clip-path: inset(50%);
  border: 0;
}

.sr-only-focusable {
  &:active,
  &:focus {
    position: static;
    width: auto;
    height: auto;
    overflow: visible;
    clip: auto;
    white-space: normal;
    clip-path: none;
  }
}

.sr-navigation {
	position: absolute;
}


a {
	@include linkColor();
	@include linkUnderline();
}

.text-left{
	text-align: left;
}
.text-center{
	text-align: center;
}
.text-right{
	text-align: right;
}
.text-justify{
	text-align: justify;
}

.font-weight-bold{
	font-weight: 600;
}
.font-weight-normal {
	font-weight: normal;
}
.font-size-xs{
	font-size: 0.5rem;
}
.font-size-sm{
	font-size: 0.625rem;
}
.font-size-md{
	font-size: 0.75rem;
}
.font-size-lg{
	font-size: 0.875rem;
}


ul.remove-list-style{
	list-style: none;
}
ul.inline-list{
	list-style: none;
	li {
		margin: 0;
		display: inline-block;
	}
}

.full-overlay{
	display: none;
	content: "";
	position: fixed;
	top: 0; bottom: 0; right: 0; left: 0;
	background-color: rgba($black, 0.75);
	// Default Navbar z-index is 1001
	// Mobile Navbar z-index is 2000
	z-index: 1500;
}

body {
	font-family: "Lucida Grande",Arial,Helvetica,sans-serif;
	font-size: 0.75rem;
	line-height: 1;
	min-height: 100vh;
}

header {
	.green-bar{
		background-color:$green;
		background-image: url(https://static.ndsu.nodak.edu/templates/images/bg_header.jpg);
		background-repeat: no-repeat;
		background-size: auto 100%;
		background-position: top left;
	}

	@include media-xl {

		h2.page-title{
			font-size: 2.5em;
			font-weight: 100;
			padding-top: 0.75em;
			padding-bottom: 0.25em;
		}
	}
	@include media-sm() {
		.page-title-wrapper {
			background-color: $gray7;
			color: $white;
			padding: 0;
			border-bottom: 1px solid $black;
		}
		h2.page-title {
			font-size: 1.25em;
			font-weight: bold;
			padding: 0.75em 1.25em;
		}
	}
}

main {
	margin-bottom: 3rem;
}

footer {
	padding: 3em;
	display: flex;
	justify-content: space-between;

	color: $white;
	font-size: 1.5em;
	line-height: 1.25em;
	a {
		@include linkColor($white, $yellow);
	}
	address{
		font-style: normal;
	}
	h5, h6 {
		color: $yellow;
		text-transform: uppercase;
	}
	h5 {
		font-size: 1.125em;
		padding: 0 0.75em 0.5em 0.75em;
	}
	.footer-address {
		flex-grow: 1;
		text-align: center;
	}
	.footer-links {
		align-self: flex-end;
		flex-basis: 20%;
		padding: 1em 0.25em;
	}

	&.footer-dark {
		background-color: $gray1;
	}

	.footer-links .navbar {
		.nav-link {
			padding: 0.5em 1em;
			font-weight: normal;
			text-transform: none;
		}

		&.clear-box .nav-link {
			@include linkUnderline(2);
		}
	}
}


.alpha-links {
    li.index a {
		color: $mineshaft;
		text-transform: uppercase;
    }
}

.social-media {
	a{
		height: 25px;
		width: 25px;
		background: url(https://static.ndsu.nodak.edu/templates/images/icon_social_media.png) no-repeat top left;
		display: inline-block;
	}
	a:hover{
		opacity: 0.6;
	}

	.icon-twitter {
		background-position: -25px 0px;
	}
	.icon-instagram {
		background-position: -50px 0px;
	}
	.icon-youtube {
		background-position: -75px 0px;
	}
	.icon-rss {
		background-position: -100px 0px;
	}
	.icon-googlemap {
		background-position: -125px 0px;
	}
}