/* LINKS */
:root {
  font-size: 16px; }

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  -webkit-clip-path: inset(50%);
          clip-path: inset(50%);
  border: 0; }

.sr-only-focusable:active, .sr-only-focusable:focus {
  position: static;
  width: auto;
  height: auto;
  overflow: visible;
  clip: auto;
  white-space: normal;
  -webkit-clip-path: none;
          clip-path: none; }

.sr-navigation {
  position: absolute; }

a {
  color: #002119; }

a:hover, a:focus, a[aria-expanded=true], a.active {
  color: #999999; }

a {
  text-decoration: none; }

a:hover, a:focus, a[aria-expanded=true], a.active {
  text-decoration: underline; }

.text-left {
  text-align: left; }

.text-center {
  text-align: center; }

.text-right {
  text-align: right; }

.text-justify {
  text-align: justify; }

.font-weight-bold {
  font-weight: 600; }

.font-weight-normal {
  font-weight: normal; }

.font-size-xs {
  font-size: 0.5rem; }

.font-size-sm {
  font-size: 0.625rem; }

.font-size-md {
  font-size: 0.75rem; }

.font-size-lg {
  font-size: 0.875rem; }

ul.remove-list-style {
  list-style: none; }

ul.inline-list {
  list-style: none; }
  ul.inline-list li {
    margin: 0;
    display: inline-block; }

.full-overlay {
  display: none;
  content: "";
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.75);
  z-index: 1500; }

body {
  font-family: "Lucida Grande",Arial,Helvetica,sans-serif;
  font-size: 0.75rem;
  line-height: 1;
  min-height: 100vh; }

header .green-bar {
  background-color: #002119;
  background-image: url(https://static.ndsu.nodak.edu/templates/images/bg_header.jpg);
  background-repeat: no-repeat;
  background-size: auto 100%;
  background-position: top left; }

header h2.page-title {
  font-size: 2.5em;
  font-weight: 100;
  padding-top: 0.75em;
  padding-bottom: 0.25em; }

@media (max-width: 767px) {
  header .page-title-wrapper {
    background-color: #121212;
    color: #fff;
    padding: 0;
    border-bottom: 1px solid #000; }
  header h2.page-title {
    font-size: 1.25em;
    font-weight: bold;
    padding: 0.75em 1.25em; } }

main {
  margin-bottom: 3rem; }

footer .footer-nav {
  background-image: url(https://static.ndsu.nodak.edu/templates/images/bg_footernav.png);
  background-repeat: repeat-x;
  background-size: auto 100%; }

footer .footer-nav .navbar {
  background: none; }

footer .footer-nav a.nav-link {
  color: #fff; }

footer .footer-nav a.nav-link:hover,
footer .footer-nav a.nav-link:focus,
footer .footer-nav a.nav-link[aria-expanded=true],
footer .footer-nav a.nav-link.active {
  color: #ffcc00; }

footer .footer-nav .secondary-menu a.nav-link {
  color: #000; }

footer .footer-nav .secondary-menu a.nav-link:hover,
footer .footer-nav .secondary-menu a.nav-link:focus,
footer .footer-nav .secondary-menu a.nav-link[aria-expanded=true],
footer .footer-nav .secondary-menu a.nav-link.active {
  color: #000; }

footer .quick-links {
  padding: 2em 0; }

footer .quick-links ul {
  list-style: none;
  line-height: 1.5em;
  margin: 0 1em; }

footer .quick-links ul li {
  text-indent: -1em;
  margin-left: 1em; }

.contact address {
  margin: 1em 0; }

.contact address h3 {
  margin-bottom: 0.5em;
  color: #ffcc00; }

.contact address .address-part {
  display: inline-block;
  vertical-align: top; }

.alpha-links li.index a {
  color: #333333;
  text-transform: uppercase; }

.social-media a {
  height: 25px;
  width: 25px;
  background: url(https://static.ndsu.nodak.edu/templates/images/icon_social_media.png) no-repeat top left;
  display: inline-block; }

.social-media a:hover {
  opacity: 0.6; }

.social-media .icon-twitter {
  background-position: -25px 0px; }

.social-media .icon-instagram {
  background-position: -50px 0px; }

.social-media .icon-youtube {
  background-position: -75px 0px; }

.social-media .icon-rss {
  background-position: -100px 0px; }

.social-media .icon-googlemap {
  background-position: -125px 0px; }
