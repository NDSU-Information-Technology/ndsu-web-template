
/* BREAKPOINTS - BASED ON BOOTSTRAP v4 */
@mixin media-xs() {
    @media (max-width: 575px){
        @content;
    }
}
@mixin media-sm() {
    @media (max-width: 767px){
        @content;
    }
}
@mixin media-md() {
    @media (max-width: 991px){
        @content;
    }
}
@mixin media-lg() {
    @media (max-width: 1199px){
        @content;
    }
}