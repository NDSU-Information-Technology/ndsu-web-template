.gallery {
    @include fixed-container();
    padding: $content-padding;
    font-size: 2em;
    line-height: 1.25em;

    h5 {
        text-transform: uppercase;
        margin-bottom: 0.5em;
    }
    .gallery-collection{
        list-style: none;
        margin: 0;
        display: flex;
        flex-flow: wrap;
    }
    .gallery-collection li {
        margin: 0.25em 0;
        width: 33%;
        flex: 1 1 auto;
    }

    .gallery-item {
        padding: 0.25em;
    }
    .picture-container {
        overflow: hidden;
        position: relative;
	    padding-bottom: 66%;
        
        img {
            position: absolute;
            top: 0; left: 0;
            display: block;
            width: 100%;
        }
    }
    figcaption {
        margin-top: 0.5em;
        .caption-1 {
            text-transform: uppercase;
            font-weight: bold;
            font-size: 0.75em;
        }
        .caption-2 {
            font-family: $serif;
        }
    }

    &.staff{
        .picture-container {
            box-shadow: 2px 2px 5px $black;
        }
    }
}