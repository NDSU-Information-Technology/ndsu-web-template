$text-columns: (2, 3, 4);

.generic-content{
	padding: 1.5* $container-padding-xl ;
    font-size: 2em;
    line-height: 1.5em;

    h3, h4, h5, h6 {
        margin-top: 0.5em;
        margin-bottom: 0.25em;
    }
    h3, h4 {
        font-family: Georgia, serif;
    }
    h5 {
        color: $green;
        text-transform: uppercase;
    }
    & > p,
    [class*='text-column-'],
    .multi-sections{
        margin-top: 1em;
    }
    
    p + p {
        margin-top: 0.5em;
    }

    a {
        text-transform: uppercase;
        font-weight: bold;
        @include linkColor($green, $green);
    }

    .subtitle{
        font-size: 1.25em;
        margin-top: 0.5em;
        margin-bottom: 0.5em;
    }

    &.gray {
        background-color: $gray90;
    }

    .multi-sections {
        display: flex;
        flex-direction: row;
    }

    .multi-sections .sub-section {
        flex: 1 1 170px;
    }

    .sub-section + .sub-section {
        margin-left: 1em;
    }

    .sub-section p {
        margin-top: 0.25em;
        font-size: 0.75em;
    }
    
    .quick-picture-container {
        display: flex;
        align-items: flex-start;

        .picture {
            flex: 0 1 30%;
        }

        .picture img {
            display: block;
            border: 1px solid $black;
            padding: 0.5em;
            margin: 0 auto;
        }
        .description {
            flex: 1 1 auto;
        }

        .picture + .description,
        .description + .picture {
            margin-left: 2em;
        }

        figcaption h5 {
            color: $black;
            margin-bottom: 0;
        }
    }

    @each $colCount in $text-columns {
        .text-column-#{$colCount} {
            column-count: $colCount;
        }
    }
    @include media-xl() {
        [class*='text-column-']{
            column-gap: 2em;
        }
    }
    @include media-md {
        .multi-sections {
            flex-wrap: wrap;
        }
        .quick-picture-container {
            flex-direction: column;
            align-items: center;
            .picture + .description,
            .description + .picture {
                margin-left: 0;
                margin-top: 2em;
            }
        }
    }
    @include media-sm {
        [class^='text-column-']{
            column-count: 1;
        }
        .multi-sections {
            flex-wrap: nowrap;
            flex-direction: column;
        }
        .multi-sections .sub-section {
            flex: 1 1 auto;
        }
        .sub-section + .sub-section {
            margin-left: 0;
        }
    }
}