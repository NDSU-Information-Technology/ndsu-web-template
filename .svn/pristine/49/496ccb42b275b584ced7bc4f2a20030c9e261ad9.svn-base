/* LINKS */
.theme-dark {
  background-color: #000;
  color: #aaaaaa; }
  .theme-dark a {
    color: #fff; }
  .theme-dark a:hover, .theme-dark a:focus, .theme-dark a[aria-expanded=true], .theme-dark a.active {
    color: #ffcc00; }

a {
  text-decoration: none; }

a:hover, a:focus, a[aria-expanded=true], a.active {
  text-decoration: underline; }

