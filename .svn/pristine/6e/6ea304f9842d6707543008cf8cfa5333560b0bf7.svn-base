$picture-padding: 0.25em;

.full-size-picture {
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
    display: block;

    img {
        display: block;
        position: absolute;
        top: 0; left: 0;
        width: 100%;
    }
}

.full-size-frame {
    position: relative;
    border: 1px solid;
    padding: $picture-padding;

    .full-size-picture {
        width: 100%;
        height: 0;
    }
}