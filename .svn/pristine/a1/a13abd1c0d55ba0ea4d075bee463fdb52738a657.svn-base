
$font-size-rem-base: 16px;

$themesList: ('dark', 'gray');

// BREAKPOINTS - BASED ON BOOTSTRAP v4 
$min-size-xl: 1200px;
$min-size-lg: 992px;
$min-size-md: 768px;
$min-size-sm: 575px;

$max-size-lg: $min-size-xl - 1;
$max-size-md: $min-size-lg - 1;
$max-size-sm: $min-size-md - 1;
$max-size-xs: $min-size-sm - 1;

// Color Definitions
$green: #002119;
$yellow: #ffcc00;
$black: #000;
$white: #fff;
$gray7: #121212;
$gray99: #fcfcfc;
$logcabin: #222222;
$mineshaft: #333333;
$stormdust: #666666;
$mountainmist: #999999;
$silverchalice: #aaaaaa;
$celeste: #cccccc;
$transparent: rgba(0,0 ,0, 0);
$zeus: #231f20;
$capecod: #404041;
$davegray: #6d6e71;
$blazeOrange: #ff6600;

// Spacers
$spacer: 1rem !default;
$spacers: (
  0: 0,
  1: ($spacer * .125),
  2: ($spacer * .25),
  3: ($spacer * .5),
  4: $spacer,
  5: ($spacer * 1.5),
  6: ($spacer * 2),
  7: ($spacer * 3)
) !default;

$z-index-overlay: 1500;
$z-index-mobile-navbar: 2000;