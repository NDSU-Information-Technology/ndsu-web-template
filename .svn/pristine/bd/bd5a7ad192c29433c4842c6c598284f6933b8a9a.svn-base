@import 'variables';
@import 'mixins';

.navbar {
	@include gotham-font;
	position: relative;
	display: flex;
	flex-wrap: wrap;
	flex-direction: row;
	list-style: none;
	text-transform: uppercase;
	margin: 0;
	z-index:1000;
	align-items: center;
	justify-content: center;

	.nav-item{
		flex: 0 0 auto;
		white-space: nowrap;
		position: relative;
	}

	.nav-link{
        display: table-cell;
        vertical-align: middle;
		text-align: center;
		@include linkUnderline(-1);
		@include buttonify(true);
	}

	&.navbar-vertical {
		flex-direction: column;
		align-items: stretch;
		.nav-link {
			text-align: left;
		}
	}
	&.navbar-left {
		justify-content: flex-start;
		.nav-link {
			text-align: left;
		}
	}
	&.navbar-justify {
		justify-content: space-around;
		.nav-item{
			flex-grow: 1;
		}
	}
	&.navbar-right {
		justify-content: flex-end;
		.nav-link {
			text-align: right;
		}
	}
	
	.nav-item.nav-item-haschild {
		& >.nav-link::after {
			content: "\00a0\00a0\25BC";
		}
		&.nav-item-haschild-up > .nav-link::after{
			content: "\00a0\00a0\25B2";
		}
	}
	
	&.child-navbar{
		text-transform: none;
		z-index: 1001;
		position: absolute;
		left: 0;
		visibility: hidden;
	}
}

@include extendTheme('gray', '.navbar') {
	background-color: inherit;
	.nav-link{
    	@include btn-variant($white, $logcabin, $yellow, $black);
	}
}

.sticky-navbar-on {
	position: fixed;
	top: 0; left: 0;right: 0;
	z-index: 1001;
	box-shadow: 1px 1px 2px $logcabin;
}

.navbar-toggle {
	&:before {
		content: "\2630";
	}
	font-weight: bold;
}

.navbar-mobile {
	position: absolute;
	top: 0; left: 0; right: 0;

	.child-navbar{
		text-transform: none;
		z-index: 1001;
		position: static;
		visibility: visible;
	}
}


@include media-xl() {
	.navbar-mobile,
	.navbar-toggle  {
		display: none;
	}
}
@include media-lg() {
}
@include media-md() {
}
@include media-sm() {
	.navbar-mobilize{
		display: none;
	}

	.navbar-mobile {
		display: flex;
	}
	.navbar-toggle {
		display: block;
	}
	
}
@include media-xs() {
	
