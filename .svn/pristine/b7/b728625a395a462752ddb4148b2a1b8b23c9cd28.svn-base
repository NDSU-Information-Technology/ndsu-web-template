
$font-size-rem-base: 16px;

$themesList: ('dark', 'gray');

// BREAKPOINTS - BASED ON BOOTSTRAP v4 
$media-sizes: ('xl', 'lg', 'md', 'sm', 'xs');

$min-size-xl: 1200px;
$min-size-lg: 992px;
$min-size-md: 768px;
$min-size-sm: 575px;

$max-size-lg: $min-size-xl - 1;
$max-size-md: $min-size-lg - 1;
$max-size-sm: $min-size-md - 1;
$max-size-xs: $min-size-sm - 1;

// Color Definitions
$green: #002119;
$yellow: #ffcc00;
$black: #000;
$white: #fff;
$gray1: #030303;
$gray2: #050505;
$gray7: #121212;
$gray90: #e5e5e5;
$gray95: 	#f2f2f2;
$gray99: #fcfcfc;
$logcabin: #222222;
$mineshaft: #333333;
$stormdust: #666666;
$mountainmist: #999999;
$silverchalice: #aaaaaa;
$celeste: #cccccc;
$transparent: rgba(0,0 ,0, 0);
$zeus: #231f20;
$capecod: #404041;
$davegray: #6d6e71;
$blazeOrange: #ff6600;

$default-secondary-bg-color: $logcabin;

$gradient-green: radial-gradient(ellipse at center 60%, $green 45%, $black 90%);
$gradient-yellow: radial-gradient(ellipse at center, $yellow 70%, $gray2 150%);

$sans-serif: "Lucida Grande",Arial,Helvetica,sans-serif;
$serif: Georgia, serif;

// Spacers
$spacer: 1rem !default;
$spacers: (
  0: 0,
  1: ($spacer * .125),
  2: ($spacer * .25),
  3: ($spacer * .5),
  4: $spacer,
  5: ($spacer * 1.5),
  6: ($spacer * 2),
  7: ($spacer * 3)
) !default;

$z-index-overlay: 1500;
$z-index-mobile-menu: 2000;
$z-index-menu: 1000;
$z-index-popup: 3000;

$content-padding-xl: 3em !default;
$content-padding-lg: 2.5em !default;
$content-padding-md: 2em !default;
$content-padding-sm: 1.25em !default;
$content-padding-xs: 1em !default;