@import 'variables';
@import 'mixins/_buttons';
@import 'mixins/_breakpoints';
@import 'mixins/_links';
@import 'mixins/_themes';

@mixin gotham-font {
	font-family: Gotham, "Gotham SSm A", "Gotham SSm B", Muli, sans-serif;
	text-rendering: optimizeLegibility;
}

@mixin fixed-container() {
	margin: 0 auto;
	@include media-xl() {
		max-width: 1220px;
	}
	@include media-lg() {
		max-width: 1050px;
	}
	@include media-md() {
		max-width: 880px;
	}
}
