@import 'variables';
@import 'mixins';

.container {
	padding: 0 $container-padding-xl;

	@include fixed-container();
}

.container-fluid {
	padding: 0 $container-padding-xl;
}

.section {
	padding-top: 2em;
	padding-bottom: 2em;
}

.flex-container {
	display: flex;
	justify-content: space-between;
	list-style: none;

	&.multiline {
		flex-wrap: wrap;
	}

	&.row{
		flex-direction: row;
	}
	&.column{
		flex-direction: column;
	}
	&.flex-center{
		justify-content: center;
	}

	&.flex-middle {
		align-items: center;
	}

	.flex-item{
		flex: 0 1 auto;
	}
	
	@each $size in (1, 2, 3, 4, 5, 6, 7, 8, 9) {
		.flex-item-size-#{$size} { flex-grow: $size; }
	}

    @each $size, $length in $spacers {
        .flex-item-m-#{$size}  { margin:        $length !important; }
        .flex-item-mt-#{$size} { margin-top:    $length !important; }
        .flex-item-mr-#{$size} { margin-right:  $length !important; }
        .flex-item-mb-#{$size} { margin-bottom: $length !important; }
        .flex-item-ml-#{$size} { margin-left:   $length !important; }
        .flex-item-mx-#{$size} {
            margin-right: $length !important;
            margin-left:  $length !important;
        }
        .flex-item-my-#{$size} {
            margin-top:    $length !important;
            margin-bottom: $length !important;
        }
    }
}

.layout {
	display: flex;
	justify-content: space-between;

    .nav-col {
		margin-top: 4em;
        flex: 0 0 200px;
		.sub-nav-title {
			text-transform: uppercase;
			text-align: center;
			border: 1px solid $logcabin;

			a {
				display: block;
				padding: 1em 0;
			}
		}
		.navbar {
			border-top: 1px solid $logcabin;
		}
		.navbar .nav-link {
			padding: 1em;
			white-space: pre-wrap;
			border: 1px solid $logcabin;
			border-top: none;
		}
		.sub-nav-title a,
		.navbar .nav-link{
			@include btn-variant($green, $transparent, $logcabin, $yellow);
		}
    }
    .main-col {
        flex: 1 1 auto;
        margin-left: 1rem;
        margin-right: 1rem;
    }

	@include media-xl {
		flex-direction: row;
	}
	@include media-sm {
		flex-direction: column;

		.nav-col {
			flex-basis: auto;
			margin-top: 2em;
		}
	}
}