@import 'mixins';

.btn {
    transition: all 0.3s ease-out;
    @include buttonify();
}
a.btn {
    text-decoration: none;
}

.btn-yellow {
    @include btn-variant($logcabin, $yellow, $white, lighten($yellow,10%));
}
.btn-darkgray {
    @include btn-variant($white, $mineshaft, $mineshaft, $silverchalice);
}
.btn-clear-yellow {
    @include btn-variant($yellow, transparent, $logcabin, $yellow);
}
.btn-darkgray-yellow {
    @include btn-variant($white, $mineshaft, $mineshaft, $yellow);
}

.btn-tiny {
    padding: 0.25em 0.5em;
}